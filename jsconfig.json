{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2022",
    "checkJs": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "types": ["jest", "node"]
  },
  "typeAcquisition": {
    "include": ["jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
